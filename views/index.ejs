<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Collected Curios</title>
  <style>
    body{
      text-align: center;
      font-family: sans-serif;
    }
    td, th, tr{
        border: 1px solid black;
        padding: 5px 25px;
        max-width: 300px;
        transition: 0.5s;
    }
    tr:hover{
      background-color: lightgrey;
    }
    table{
      margin: 20px auto;
      border-collapse: collapse;
    }
    input{
      font-size: medium;
    }
    button{
        font-size: medium;
        border-radius: 5px;
        padding: 5px;
        background-color: lightgrey;
        outline: 0;
    }
    #largerTitle{
      font-size: 15pt;
      padding: 10px;
    }
    #errorMessage{
      margin: 10px auto;
    }
  </style>
  <script>
    function checkData(form){
      document.getElementById("errorMessage").innerHTML="";
      var tests = [form.item.value, form.description.value, form.worth.value];
      var errors = ["curio name", "curio description", "curio value"];
      for(var i = 0; i<tests.length; i++){
        if(tests[i]==""){
          document.getElementById("errorMessage").innerHTML="You must enter a "
            + errors[i] + ". Your Collection must be properly archived...";
          return false;
        }
      }
      return true;
    }
  </script>
</head>
<body>
  <h2>Collected Curios</h2>
  <form action="/collectibles" method="POST" onsubmit="return checkData(this)">
    <input type="text" placeholder="Curio" name="item">
    <input type="text" placeholder="Description" name="description">
    <input type="text" placeholder="Curio Value" name="worth">
    <button type="submit">Add to your Collection</button>
  </form>
  <div id="errorMessage"></div>
  <table class="items">
    <tr>
      <th colspan="3" id="largerTitle">Your Collection</th>
    </tr>
    <tr>
      <th>Curio</th>
      <th>Description</th>
      <th>Value</th>
    </tr>
    <% for(var i=items.length-1; i>=0; i--) {%>
      <tr>
        <td><%= items[i].item %></td>
        <td><%= items[i].description %></td>
        <td><%= items[i].worth %></td>
      </tr>
    <% } %>
  </table>
</body>
</html>
